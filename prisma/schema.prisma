generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  username      String    @unique // Уникальный логин
  password      String    // Хэш пароля (опционально)
  @@map("users")
}

model Target {
  id            Int       @id @default(autoincrement())
  label         String
  description   String?
  @@map("targets")
}
